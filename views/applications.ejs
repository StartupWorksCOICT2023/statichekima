<!DOCTYPE html>
<html lang="en">

<%- include("./partials/head.ejs") -%>
<link rel="stylesheet" href="/assets/css/listInit.css">

  <body >

    <!--Header section-->
    <%- include("./partials/adminHeader.ejs") -%>

      <!-- ==============  all our content starts here  ============== -->

      <section class="container">

        <div class="section-title">
          <h2>View applications</h2>
        </div>


        <div id="applications_list" class="container text-white table-responsive py-5">
          <table class="table text-white table-bordered">
            <thead class="thead-dark">
              <tr>
                <th scope="col">#</th>
                <th scope="col">First Name</th>
                <th scope="col">Second Name</th>
                <th scope="col">Surname</th>
                <th scope="col">D.O.B</th>
                <th scope="col">Sex</th>
                <th scope="col">Religion</th>
                <th scope="col">Entry level</th>
                <th scope="col"></th>
              </tr>
            </thead>
            <tbody class="list">
              <% for (const applicant of listofapplicants ){ %>
                <tr>
                  <th scope="row">#</th>
                  <td>
                    <%= applicant.firstname %>
                  </td>
                  <td>
                    <%= applicant.secondname %>
                  </td>
                  <td class="item">
                    <%= applicant.surname %>
                  </td>
                  <td>
                    <%= applicant.dob %>
                  </td>
                  <td>
                    <%= applicant.sex %>
                  </td>
                  <td>
                    <%= applicant.entrylevel %>
                  </td>
                  <td>
                    <%= applicant.entryclass %>
                  </td>
                  <td>
                    <a class="btn bg-white text-dark" href="/applications/<%= applicant.id %>">View More</a>
                  </td>
                </tr>

                <% } %>
            </tbody>
          </table>

          
          <ul class="pagination justify-content-end mt-5 text-white" ></ul>

        </div>





      </section>

      <!-- ==============  all our content ends here  ============== -->

      <!-- ======= Footer ======= -->
      <%- include("./partials/adminFooter.ejs") -%>
        <!-- Footer end -->


        <div id="preloader"></div>
        <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i
            class="bi bi-arrow-up-short"></i></a>

        <%# include("./partials/scripts.ejs") -%>

        <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.10.1/jquery.min.js"></script> 
        <script src="//cdnjs.cloudflare.com/ajax/libs/list.js/1.5.0/list.min.js"></script>
        <script src="/assets/js/listinit.js" type="text/javascript"></script>

  </body>

</html>