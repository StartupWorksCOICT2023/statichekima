<!DOCTYPE html>
<html lang="en">

<%- include("./partials/head.ejs") -%>


  <body>


    <header id="header" class="header-one">
      <div class="section-yellowish">
        <div class="container">
          <div class="logo-area">
              <div class="row align-items-center ">
                <div class="logo col-lg-3 text-center text-lg-left mb-3 mb-md-5 mb-lg-0">
                    <a class="d-flex flex-row align-items-center justify-content-center" href="/">
                      <img loading="lazy" src="images/Logo.png" alt="Constra">
                      <h2 class="text-blue align-items-center" style="color: #2c4964; margin-left: 10px;">Hekima Schools</h2>
                    </a>
                </div><!-- logo end -->
      
                <div class="col-lg-9 header-right">
                  <ul class="top-info-box">
                    <li>
                      <div class="info-box">
                        <div class="info-box-content">
                            <p class="info-box-title">Call Us</p>
                            <a class="info-box-subtitle" href="tel:+255767568310">+255767568310</a>
                        </div>
                      </div>
                    </li>
                    <li>
                      <div class="info-box">
                        <div class="info-box-content">
                            <p class="info-box-title">Email Us</p>
                            <p class="info-box-subtitle">hekimaschools@gmail.com</p>
                        </div>
                      </div>
                    </li>
                  </ul><!-- Ul end -->
              </div><!-- header right end -->
              </div><!-- logo area end -->
      
          </div><!-- Row end -->
        </div><!-- Container end -->
      </div>
      </header>

    <!-- ==============  all our content starts here  ============== -->

    <section class="container">

      <div class="section-title">
        <h2>Login Page</h2>
      </div>




      <div class="row">
        <div class="p-4 p-md-5 mb-4 rounded" style="background-color: #D6E4E5;">
          <form method="POST" action="/login" class="row g-3">

            <div class="form-group">
              <label for="exampleInputEmail1" class="blog-post-title-2" >Username</label>
              <input type="text" name='username' class="form-control form-input " id="username" aria-describedby="emailHelp"
                placeholder="Username">
              <% if(usernameError.length> 0){ %>
                <div class="alert text-danger ps-0">
                  <i class="fa-solid fa-triangle-exclamation me-2 mb-0"></i>
                  <%= usernameError %>
                </div>
                <%}%>
            </div>
            <div class="form-group">
              <label for="exampleInputPassword1" class="blog-post-title-2">Password</label>
              <input name="password" type="password" class="form-control form-input" id="Password" placeholder="Password">
              <% if(passwordError.length> 0){ %>
                <div class="alert text-danger ps-0">
                  <i class="fa-solid fa-triangle-exclamation me-2 mb-0"></i>
                  <%= passwordError %>
                </div>
                <%}%>
            </div>


            <button style="background-color: #0A2647; color: #fff; font-size:large;" type="submit"
              class="btn btn-primary mt-3">Login</button>

          </form>
        </div>
      </div>





    </section>

    <!-- ==============  all our content ends here  ============== -->


    <!-- ======= Footer ======= -->
    <%- include("./partials/footer.ejs") -%>
      <!-- Footer end -->

      <div id="preloader"></div>
      <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i
          class="bi bi-arrow-up-short"></i></a>

      <%- include("./partials/scripts.ejs") -%>

  </body>

</html>